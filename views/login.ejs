<!doctype html>
<html lang="kr">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/public/main.css">

    <title>Todolist</title>
</head>

<body>
    <%- include('nav.html') %>
    <div class="signin text-center">
        <form class="form-signin" action="/login" method="post">
            <h1 class="h3 mb-3 font-weight-bold">로그인</h1>
            <label for="inputEmail" class="sr-only">ID</label>
            <input type="text" name="id" id="inputEmail" class="form-control" placeholder="아이디를 입력하세요." required="" autofocus="">
            <label for="inputPassword" class="sr-only">Password</label>
            <input type="password" name="pw" id="inputPassword" class="form-control" placeholder="비밀번호를 입력하세요." required="">
            <div class="checkbox mb-3">
            <label>
                <input type="checkbox" value="remember-me"> Remember me
            </label>
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
            <p class="mt-5 mb-3 text-muted">© 2021</p>
        </form>
    </div>
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

</body>

</html>