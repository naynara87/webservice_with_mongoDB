<!doctype html>
<html lang="kr">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/public/main.css">

    <title>Todolist</title>
</head>

<body style="padding-top:5rem">
    <%- include('nav.ejs') %>

        <h4 class="container mt-4"><strong>글 작성페이지</strong></h4>

        <div class="container mt-3">
            <form action="/edit?_method=PUT" method="POST">
                <div class="form-group">
                    <label>오늘의 할일</label>
                    <input type="text" style="display: none;" name="id" value="<%= post._id %>">
                    <input type="text" class="form-control" name="title" value="<%= post.제목 %>">
                </div>
                <div class="form-group">
                    <label>날짜</label>
                    <input type="text" class="form-control" name="date" id="datePicker" value="<%= post.날짜 %>">
                </div>
                <div class="form-group">
                    <label>내용</label>
                    <textarea class="form-control" type="text" class="form-control" name="detail"><%= post.내용 %></textarea>
                </div>
                <button type="submit" class="btn btn-outline-secondary">Submit</button>
            </form>
        </div>
        <!-- /.container -->

        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

</body>

</html>